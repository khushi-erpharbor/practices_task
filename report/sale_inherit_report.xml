<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="description_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
		<xpath expr="//th[@name='th_description']" position="before">
            <th t-if="doc.display_image" name="th_internal_reference" class="text-start">Image</th>
        </xpath>
        <xpath expr="//td[@name='td_name']" position="before">
            <td  t-if="doc.display_image" >
                <img t-att-src="image_data_uri(line.product_template_id.image_1920) " style="max-height:100pt;max-width:100%"/>
        	</td>
        </xpath>
	</template>
</odoo>
